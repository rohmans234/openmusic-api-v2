# Server Configuration
PORT=5000
HOST=localhost

# Database
DATABASE_URL=postgres://username:password@localhost:5432/openmusic_db

# JWT
ACCESS_TOKEN_KEY=your-secret-key-for-access-token
REFRESH_TOKEN_KEY=your-secret-key-for-refresh-token
ACCESS_TOKEN_AGE=1800

# RabbitMQ (Kriteria 1)
RABBITMQ_SERVER=amqp://guest:guest@localhost:5672

# Redis (Kriteria 4)
REDIS_SERVER=localhost

# Email (Kriteria 1 - Consumer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Storage Type (Kriteria 2)
STORAGE_TYPE=local
# STORAGE_TYPE=s3

# AWS S3 (Kriteria 2 - Optional jika menggunakan S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=ap-southeast-1
# AWS_BUCKET_NAME=your-bucket-name
