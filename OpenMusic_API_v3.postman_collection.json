              "host": ["localhost"],
              "port": "5000",
              "path": ["albums", "{{albumId}}"]
            }
          }
        },
        {
          "name": "Upload Album Cover",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "cover",
                  "value": "path/to/image.jpg",
                  "type": "file"
                }
              ]
            },
            "url": {
              "raw": "http://localhost:5000/albums/{{albumId}}/covers",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["albums", "{{albumId}}", "covers"]
            }
          }
        },
        {
          "name": "Delete Album",
          "request": {
            "method": "DELETE",
